# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

# The indentation in package.json will always need to be 2 spaces
# https://github.com/npm/npm/issues/4718
[*.json]
indent_style = space
indent_size = 2
